{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2018",
      "es2020",
      "esnext.asynciterable"
    ],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
